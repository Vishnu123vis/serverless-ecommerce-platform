{
  "name": "serverless-ecommerce-platform",
  "version": "1.0.0",
  "description": "A comprehensive, event-driven serverless e-commerce platform built on AWS with microservices architecture",
  "main": "serverless.ts",
  "scripts": {
    "build": "tsc",
    "dev": "serverless offline start",
    "deploy": "serverless deploy",
    "deploy:dev": "serverless deploy --stage dev",
    "deploy:prod": "serverless deploy --stage prod",
    "remove": "serverless remove",
    "remove:dev": "serverless remove --stage dev",
    "remove:prod": "serverless remove --stage prod",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "seed": "ts-node seedData/deploytoAWS.ts",
    "logs": "serverless logs -f",
    "invoke": "serverless invoke -f",
    "package": "serverless package"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "serverless",
    "ecommerce",
    "aws",
    "typescript",
    "microservices",
    "event-driven",
    "dynamodb",
    "lambda",
    "api-gateway",
    "cognito",
    "eventbridge"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/serverless-ecommerce-platform.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/serverless-ecommerce-platform/issues"
  },
  "homepage": "https://github.com/yourusername/serverless-ecommerce-platform#readme",
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.817.0",
    "@aws-sdk/client-dynamodb": "^3.817.0",
    "@aws-sdk/client-secrets-manager": "^3.823.0",
    "@aws-sdk/client-ses": "^3.823.0",
    "@aws-sdk/lib-dynamodb": "^3.817.0",
    "@middy/core": "^3.4.0",
    "@middy/http-json-body-parser": "^3.4.0",
    "axios": "^1.9.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@serverless/typescript": "^3.0.0",
    "@types/aws-lambda": "^8.10.71",
    "@types/node": "^14.14.25",
    "esbuild": "^0.25.5",
    "json-schema-to-ts": "^1.5.0",
    "serverless": "^3.0.0",
    "serverless-esbuild": "^1.23.3",
    "serverless-iam-roles-per-function": "^3.2.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.1.3"
  },
  "author": "The serverless webpack authors (https://github.com/elastic-coders/serverless-webpack)",
  "license": "MIT"
}
